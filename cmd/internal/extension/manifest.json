{
  "manifest_version": 3,
  "name": "Awsure SAML Interceptor",
  "version": "1.0.0",
  "description": "Captures SAML assertions from AWS signin pages for awsure CLI",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.signin.aws.amazon.com/*",
    "*://*.console.aws.amazon.com/*",
    "*://login.microsoftonline.com/*",
    "*://*.okta.com/*",
    "*://*.okta-emea.com/*",
    "*://*.oktapreview.com/*",
    "http://localhost:*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.signin.aws.amazon.com/*",
        "*://*.console.aws.amazon.com/*",
        "*://login.microsoftonline.com/*",
        "*://*.okta.com/*",
        "*://*.okta-emea.com/*",
        "*://*.oktapreview.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
